<div class="geolocation_body">
<%= form_tag geolocation_path, method: :post do %>

<div class="form-group">
  <%= label :latitude, "Enter Latitude : " %>
  <%= text_field_tag :latitude, params[:latitude], class: "form_field", placeholder: "Enter Latitude" %>
</div>
<div class="form-group">
  <%= label :longitude, "Enter Longitude : "  %>
  <%= text_field_tag :longitude, params[:longitude], class: "form_field", placeholder: "Enter Longitude" %>
</div>
<hr>
<div class="form-group">
  <%= label :ip_address, "IP Address :"%>
  <%= text_field_tag :ip_address, params[:ip_address], class: "form_field", placeholder: "Enter IP Address"%>
</div>
<hr>
<div class="form-group">
  <%= label :city_name, "City Name :"%>
  <%= text_field_tag :city_name, params[:city_name], class: "form_field", placeholder: "Enter City Name"%>
</div>

  <%= submit_tag "Search", class: "btn btn-large btn-primary" %>
<% end %>
</div>
<div class="divider"></div>
  <div class="output">
    <% if !@city.blank? %>
    <p>Current location is : <b><%= @city %></b> </p>
     <hr>
    <% end %>
   
    <% if !@country_ip.blank? %>
     <p>Current location(IP) is :<b><%= @country_ip %></b>
     <p>Current location(IP) is :<b><%= @city_ip %></b>
     <p>Current location(IP) is :<b><%= @zip_ip %></b>
     <hr>
     <% end %>

    <% if !@country.blank? %>
     <p>Current country is :<b><%= @country %> </b>
     <p>Current state is :<b><%= @state %></b>
     <p>Current country code is :<b><%= @countrycode %></b> 
      <hr>
     <% end %>
    
  </div>


